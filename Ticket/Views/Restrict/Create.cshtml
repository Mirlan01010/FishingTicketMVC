@model BLL.Models.RestrictModels.RestrictVM

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pb-3">Добавить Область</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.restrictRequest.RestrictedCount">Ограничение</label>

                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.restrictRequest.RestrictedCount" class="form-control" />
                        <span asp-validation-for="@Model.restrictRequest.RestrictedCount" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row pt-3">
                    <div class="col-4">
                        <label asp-for="@Model.restrictRequest.WaterBodyId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.restrictRequest.WaterBodyId" asp-items="@Model.WaterbodyResponse" class="form-control">
                            <option disabled selected>--Select Water Body-- </option>
                        </select>
                        <span asp-validation-for="@Model.restrictRequest.WaterBodyId" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row pt-3">
                    <div class="col-4">
                        <label asp-for="@Model.restrictRequest.TicketTypeId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.restrictRequest.TicketTypeId" asp-items="@Model.TicketTypeResponse" class="form-control">
                            <option disabled selected>--Select Type-- </option>
                        </select>
                        <span asp-validation-for="@Model.restrictRequest.TicketTypeId" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row pt-3">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-success w-100" value="Добавить" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-100"><i class="fa-solid fa-right-from-bracket"></i>Назад</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

