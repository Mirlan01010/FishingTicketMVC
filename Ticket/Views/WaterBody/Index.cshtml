@model IEnumerable<BLL.Models.WaterBodyModels.WaterBodyResponse>

<div class="container p-3">
    <div class="row p-t">
        <div class="col-6">
            <h2 class="text-primary">Список видов билета</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="WaterBody" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Добавить новый водоём
            </a>

        </div>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th style="font-weight: bold;">
                        Название
                    </th>
                    <th style="text-align:center;">
                        Область
                    </th>
                    <th style="text-align:center;">
                        Доступность
                    </th>
                    <th style="text-align:center;">
                        Действие
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width:50% style="font-weight: normal;">@obj.Name</td>
                        <td width:50% style="font-weight: normal;text-align:center;">@obj.Region.Name</td>
                        @if (obj.IsActive == true)
                        {
                            <td width:30% style="background-color: #28a745; color: white;text-align: center;font-weight: bold; text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.5);">Доступно</td>
                        }
                        else
                        {
                            <td width:30% style="background-color:red; color: white;text-align: center;font-weight: bold; text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.5);">Не доступно</td>
                        }
                        <td class="text-center ">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="WaterBody" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-controller="WaterBody" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                                <a asp-controller="WaterBody" asp-route-Id="@obj.Id" asp-action="Active" class="btn btn-secondary mx-2">
                                    <i class="fa-solid fa-font"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Список водоёмов пуст!</p>
    }
</div>
@section Scripts {

}