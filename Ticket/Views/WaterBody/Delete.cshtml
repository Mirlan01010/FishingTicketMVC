@model BLL.Models.WaterBodyModels.WaterBodyResponse

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pb-3">Удалить Водоём</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"> Название</label>

                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" disable/>
                    </div>

                </div>
                <div class="form-group row pt-3">
                    <div class="col-4">
                        <label asp-for="Region.Name"> Область</label>

                    </div>
                    <div class="col-8">
                        <input asp-for="Region.Name" disabled class="form-control" />
                    </div>

                </div>
                
                <div class="form-group row pt-3">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Удалить" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-100"><i class="fa-solid fa-right-from-bracket"></i>Назад</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
