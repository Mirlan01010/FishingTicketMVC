@model List<BLL.Models.AuthModels.ExtendedUserModel>

@{
    var role = Context.Request.Query["role"];
}

<div class="container p-3">
    <div>
        @if (role == "User")
        {
            <a asp-controller="User" asp-action="Index" asp-route-role="Admin" class="btn btn-primary">
                <i class="fa-solid fa-list"></i> Показать список Админов
            </a>
        }
        else
        {
            <a asp-controller="User" asp-action="Index" asp-route-role="User" class="btn btn-primary">
                <i class="fa-solid fa-list"></i> Показать список пользователей
            </a>
        }
    </div>
    <br />
    <br />
    <div class="row p-t">
        <div class="col-6">
            @if (role == "User")
            {
                <h2 class="text-primary">Список пользователей</h2>

            }
            else
            {
                <h2 class="text-primary">Список Админов</h2>
            }
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Добавить нового пользователя
            </a>

        </div>
    </div>
    
</div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th style="font-weight: bold;">
                        Имя пользователя
                    </th>
                    <th style="text-align:center;">
                        Почта
                    </th>
                    <th style="text-align:center;">
                        Действие
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width:50% style="font-weight: normal;">@obj.UserName</td>
                        
                        <td width:30%">@obj.Email</td>
                        
                        <td class="text-center ">
                            <div class="w-75 btn-group" role="group">
                            <a asp-controller="User" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-controller="User" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                                
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Список областей пуст!</p>
    }


@section Scripts {

}